
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>ForgotPassword</title>
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" rel="stylesheet">

    <style>
        body {
            background-repeat: no-repeat;
            -webkit-background-size: cover;
            -moz-background-size: cover;
            -o-background-size: cover;
            background-size: cover;
        }

        hr {
            display: block;
            margin-top: 0.5em;
            margin-bottom: 0.5em;
            margin-left: auto;
            margin-right: auto;
            border-style: inset;
            border-width: 2px;
            background-color: rgba(66,139,202);
        }
    </style>
</head>
<body>
    <div class="container mt-5">



        <div class="col-md-4 offset-md-4">

            @if (ViewBag.True != null)
            {
                <div class="alert alert-success" role="alert">
                    @ViewBag.True
                </div>
            }
            @if (ViewBag.False != null)
            {
                <div class="alert alert-danger" role="alert">
                    @ViewBag.False
                </div>
            }

            <div class="card-body">
                <div><h3 class="text-center text-primary">Parolamı Unuttum</h3></div><hr /><br />
                @using (Html.BeginForm("ForgotPassword", "Home", FormMethod.Post,
                    new { enctype = "multipart/form-data" }))
                {
                    <div class="form-group">
                        <label for="exampleInputEmail1"><b>E-mail Adresi</b></label>
                        @Html.TextBox("Email", "", new { @class = "form-control", placeholder = "E-mail Adresi", type = "email", required = "required" })
                    </div>

                    <button class="btn btn-primary btn-block" type="submit">Gönder</button>
                }

            </div>

        </div>

    </div>
</body>
</html>
