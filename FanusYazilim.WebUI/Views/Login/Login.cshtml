
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Giriş Yap</title>
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" rel="stylesheet">

    <style>
        body {
            background-image: url("../Content/media/bg-image/bg-image.jpg");
            background-repeat: no-repeat;
            -webkit-background-size: cover;
            -moz-background-size: cover;
            -o-background-size: cover;
            background-size: cover;
        }

        hr {
            display: block;
            margin-top: 0.5em;
            margin-bottom: 0.5em;
            margin-left: auto;
            margin-right: auto;
            border-style: inset;
            border-width: 2px;
            background-color: rgba(66,139,202);
        }
    </style>
</head>
<body>

    <div style="margin-top:59px;">

        @if (ViewBag.ValidLogin != null)
        {
            <div class="row">
                <div class="col-md-4 col-xs-12 mt-xs-2 offset-md-4">
                    <div class="pl-5 pr-5 alert alert-danger alert-dismissible" role="alert">
                        <strong>Hata!! </strong> @ViewBag.ValidLogin
                        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>

                </div>
            </div>

        }
        <div class="bg-light card card-login col-md-4 col-xs-12 mt-xs-2 offset-md-4 mt-xl-2 text-center">

            <div class="card-body">
                <div><h3 class="text-center text-primary">Giriş Yap</h3></div><hr /><br />
                @using (Html.BeginForm("Index", "Home", FormMethod.Post,
                    new { enctype = "multipart/form-data" }))
                {
                    <div class="form-group">
                        <label for="exampleInputEmail1"><b>E-mail Adresi</b></label>
                        @Html.TextBox("Email", "", new { @class = "form-control", placeholder = "E-mail Adresi", type = "email", required = "required" })
                    </div>
                    <div class="form-group">
                        <label for="exampleInputPassword1"><b>Parola</b></label>
                        @Html.TextBox("Password", "", new { @class = "form-control", placeholder = "Parola", type = "password", required = "required" })

                    </div>

                    <button class="btn btn-primary btn-block" type="submit">Giriş</button>
                }
                <div class="text-center mt-4">
                    <a class="d-block small" href="~/ForgotPassword">Parolamı Unuttum</a>
                </div>
            </div>
        </div>
    </div>
    <br />

</body>
</html>
